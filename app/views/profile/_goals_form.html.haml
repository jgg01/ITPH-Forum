= simple_form_for @goal, url: create_goal_path do |f|
  .goalsForm
    = label_tag 'title'
    = f.text_field :title, required: 'true', placeholder: "Write your long term goal here"
    .stepForm
    .row
      .small-6.columns
        = label_tag 'steps'
        = f.text_field :step1, required: 'true'
      .small-6.columns  
        %a.removeNewStep x
        
    .stepForm
