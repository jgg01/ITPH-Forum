      .small-6.columns
        = label_tag 'steps'
        = f.text_field :step3
      .small-6.columns  
        %a.removeNewStep x
    .stepForm
    .row
      .small-6.columns
        = label_tag 'steps'
        = f.text_field :step4
      .small-6.columns  
        %a.removeNewStep x
    .stepForm
    .row
      .small-6.columns
        = label_tag 'steps'
        = f.text_field :step5
      .small-6.columns  
        %a.removeNewStep x
    .stepForm
    .row
      .small-6.columns
        = label_tag 'steps'
        = f.text_field :step6
      .small-6.columns  
        %a.removeNewStep x
        
    .stepForm
    .row
      .small-6.columns
        = label_tag 'steps'
        = f.text_field :step7
      .small-6.columns  
        %a.removeNewStep x
    .stepForm
    .row
      .small-6.columns
