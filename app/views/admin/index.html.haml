%h2= flash[:notice]
%table#users
  %thead
    %tr
    %th First Name 
    %th Last Name 
    %th Email 
    %th Admin?
    %th Approved?
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.first_name, edit_admin_path(user)
        %td= user.last_name
        %td= user.email 
        %td= user.admin
        %td= user.approved
        
%br= link_to "Admin Index", adminhome_path
%br= link_to 'sign out', destroy_user_session_path, :method => :delete, :action => :destroy
